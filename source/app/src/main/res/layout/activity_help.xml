<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_play_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="125dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game sẽ bắt đầu với các hình ảnh gợi ý khác nhau
                \nNhiệm vụ của bạn là ghép các chữ cái có sẵn tạo thành câu trả lời phù hợp với nội dung hình ảnh.
                \nVượt qua mỗi màn chơi bạn sẽ được thưởng 100 coin.
                \nTrả lời sai sẽ mất đi 1 trái tim
                \nKhi hết trái tim, trò chơi sẽ dừng lại"
                android:textColor="#06F60F"
                android:textSize="27sp" />
        </LinearLayout>

        <Button
            android:textColor="#000"
            android:textSize="24dp"
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="250dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/next"
            android:text="Trở về" />

        <TextView
            android:gravity="center"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="Cách chơi"
            android:textColor="#E6D112"
            android:textSize="30sp" />

    </RelativeLayout>

</TableLayout>
